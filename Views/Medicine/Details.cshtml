@{
}
@model HopePharmacy.Models.MedicineDetailsModel;
<html>
<head>

</head>
<body>
    <form asp-action="AddMedicineDetails">
    <div class="row">

        <div class="col-md-4">
            Supplier Name
            <span class="text-danger">*</span>
            <select class="form-control" asp-for="SupplierId" asp-items="@(new SelectList(ViewBag.Supplier,"SupplierId","SupplierName"))">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            Cost Price
            <span class="text-danger">*</span>
            <input type="text" class="form-control" asp-for="CostPrice" />
            <span asp-validation-for="CostPrice" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            Selling Price
            <span class="text-danger">*</span>
            <input type="text" class="form-control" asp-for="SellingPrice" />
            <span asp-validation-for="SellingPrice" class="text-danger"></span>
        </div>

    </div>

    <div class="row">
        <div class="col-md-4">
            Expiray Date
            <span class="text-danger">*</span>
            <input type="date" class="form-control" asp-for="ExpirayDate" />
            <span asp-validation-for="ExpirayDate" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            Orginal Quantity
            <span class="text-danger">*</span>
            <input type="number" class="form-control" min="0" max="100" maxlength="3" asp-for="OrginalQuantity" />
            <span asp-validation-for="OrginalQuantity" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            Left Quantity
            <span class="text-danger">*</span>
            <input type="number" class="form-control" min="0" max="100" maxlength="3" asp-for="LeftQuantity" />
            <span asp-validation-for="LeftQuantity" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            Discount Value
            <span class="text-danger">*</span>
            <input type="text" class="form-control" asp-for="DiscountValue" />
            <span asp-validation-for="DiscountValue" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            Tax Value
            <span class="text-danger">*</span>
            <input type="text" class="form-control" asp-for="TaxValue" />
            <span asp-validation-for="TaxValue" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            Description
            <input type="text" class="form-control" asp-for="Description" />
        </div>


    </div>

    <div class="row">
        <div class="col-md-4">
            <input type="text" asp-for="MedicineId" value="@ViewBag.MedicineId" />
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </div>
    </form>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</html>