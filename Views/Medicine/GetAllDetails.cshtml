@{
}

@{
    ViewData["Title"] = "Get All Medicines Details";
}
@model List<HopePharmacy.Models.MedicineDetailsModel>;
<html>
<head>
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">
</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <h2 style="text-align:center">
                Get All Medicines Details
            </h2>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Medicine Name</th>
                        <th>Supplier Name</th>
                        <th>Original QTY</th>
                        <th>Left QTY</th>
                        <th>Cost Price</th>
                        <th>Selling Price</th>
                        <th>Discount Value</th>
                        <th>Tax Value</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (HopePharmacy.Models.MedicineDetailsModel item in Model)
                    {
                    <tr>
                        <td>
                            @item.MedicineName
                        </td>

                        <td>
                            @item.SupplierName
                        </td>
                        <td>@item.OrginalQuantity</td>
                        <td>@item.LeftQuantity</td>
                        <td>@item.CostPrice</td>
                        <td>@item.SellingPrice</td>
                        <td>@item.DiscountValue</td>
                        <td>@item.TaxValue</td>
                        <td>@item.Description</td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>


</body>
</html>