@model HopePharmacy.Models.InvoiceModel;
    <html>
    <head>

    </head>
    <body>

        <div class="row">
            <div class="col-md-4">
                Patient Name
                <span class="text-danger">*</span>
                <select class="form-control" asp-for="PatientId" asp-items="@(new SelectList(ViewBag.Patient,"PatientId","PatientName"))">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                Medicine Name
                <span class="text-danger">*</span>
                <select class="form-control" asp-for="MedicineId" asp-items="@(new SelectList(ViewBag.Medicine,"Id","Name"))">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="MedicineId" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                Quantity
                <span class="text-danger">*</span>
                <input type="number" asp-for="QTY" class="form-control" />
                <span asp-validation-for="QTY" class="text-danger"></span>
            </div>
        </div>


    </body>
</html>